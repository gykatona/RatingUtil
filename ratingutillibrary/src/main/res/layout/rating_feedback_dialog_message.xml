<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/rating_default_padding"
    android:layout_margin="@dimen/rating_default_padding"
    tools:background="#77FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:background="#FF0000" >

        <ImageView
            android:id="@+id/app_icon_dialog_mail"
            android:layout_width="@dimen/rating_icon_size"
            android:layout_height="wrap_content"
            android:width="@dimen/rating_icon_size"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginEnd="@dimen/rating_horizontal_spacing"
            android:layout_marginRight="@dimen/rating_horizontal_spacing"
            tools:background="#FFFF00"
            android:contentDescription="@string/rating_icon_content_description" />

        <TextView
            android:id="@+id/mail_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/rating_text_size"
            android:text="@string/rating_dialog_feedback_message" />
    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rating_default_padding"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonCancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/rating_horizontal_spacing_small"
            android:layout_marginRight="@dimen/rating_horizontal_spacing_small"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/buttonYes"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/rating_horizontal_spacing_small"
            android:layout_marginLeft="@dimen/rating_horizontal_spacing_small"
            android:text="@android:string/ok" />
    </LinearLayout>
</LinearLayout>